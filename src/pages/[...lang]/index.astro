---
import Layout from '../../layouts/Layout.astro';
import PortfolioPage from '../../components/PortfolioPage';

export function getStaticPaths() {
  return [
    { params: { lang: undefined } },  // / (English - default)
    { params: { lang: 'es' } },       // /es (Spanish)
  ];
}

const { lang } = Astro.params;
const currentLang = lang === 'es' ? 'es' : 'en';
---

<Layout title="Fernando Astorga Cobos | Senior Software Engineer" lang={currentLang}>
	<PortfolioPage client:load lang={currentLang} />
</Layout>

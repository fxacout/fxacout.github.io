---
import '../styles/global.css';

interface Props {
	title?: string;
	lang?: 'en' | 'es';
}

const { title = 'Portfolio', lang = 'en' } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Senior Software Engineer Portfolio - Building with purpose" />
		<title>{title}</title>
	</head>
	<body class="antialiased">
		<slot />
	</body>
</html>

<style is:global>
	html {
		scroll-behavior: smooth;
	}
	
	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100%;
	}
</style>
